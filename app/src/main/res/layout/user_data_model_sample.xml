<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="3dp"
    android:layout_marginTop="7dp"
    android:layout_marginRight="3dp"
    android:background="#ffffff"
    android:elevation="20dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_textView_sUserDataModel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Id : "
                android:textColor="#1379C8"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/numberAsID_textView_sUserDataModel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="number"
                android:textColor="#1379C8"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/call_TextView_sUserDataModel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="190dp"
                android:text="Call"
                android:textColor="#1379C8" />


            <TextView
                android:id="@+id/delete_TextView_sUserDataModel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Delete"
                android:textColor="#E33737" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="2dp"
            android:background="#959595" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginTop="38dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/userImage_imageView_sUserDataModel"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/vector_temp_person" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_textView_sUserDataModel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sample name" />

            <TextView
                android:id="@+id/mobileNo_textView_sUserDataModel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="sample mobile number" />

            <TextView
                android:id="@+id/rikshawNo_textView_sUserDataModel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="sample rikshaw number" />


        </LinearLayout>

        <ImageView
            android:id="@+id/viewMore_imageView_sUserDataModel"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="18sp"
            android:src="@drawable/vector_arrow_forward_ios" />


    </LinearLayout>


</androidx.cardview.widget.CardView>